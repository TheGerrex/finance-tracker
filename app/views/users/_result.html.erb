<%= render 'layouts/messages' %>
<% if @stock %>
  <div class="card card-header bg-light p-3 d-inline-block">
    <strong>Symbol: </strong> <%= @stock.ticker %>
    <strong>Name: </strong> <%= @stock.name %>
    <strong>Price: </strong> <%= @stock.last_price %>
    <% if current_user.can_track_stock?(@stock.ticker)%>
    <%= link_to "Add to portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-sm btn-success", method: :post %>
    <% else %>
      <span class="badge bg-secondary">
        You are already tracking
        <% if !current_user.under_stock_limit? && !current_user.stock_already_tracked?(@stock.ticker) %>
          <b>10 stocks</b>
        <% end %>
        <% if current_user.stock_already_tracked?(@stock.ticker) %>
          this stock
        <% end %>
      </span>
    <% end %>
  </div>
<% end %>