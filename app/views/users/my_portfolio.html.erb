<h1>My Portfolio</h1>

<div class="search-area pt-5 pb-3 bg-white">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, {remote: true, method: :get} do %>
    <div class="form-group row">
      <div class="col-sm-9 pe-0 ">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg"%>
      </div>
      <div class="col-sm-3 ps-0 ">
        <%= button_tag type: :submit, class: "btn btn-primary" do%>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-10">
    <div id="results">
    </div>
  </div>
</div>

  
